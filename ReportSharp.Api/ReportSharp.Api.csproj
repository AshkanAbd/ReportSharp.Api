<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netcoreapp3.1</TargetFramework>
        <OutputType>Library</OutputType>
        <AssemblyName>ReportSharp.Api</AssemblyName>
        <RootNamespace>ReportSharp.Api</RootNamespace>
        <PackageId>ReportSharp.Api</PackageId>
        <Version>1.0.5</Version>
        <Authors>AshkanAbd</Authors>
        <Company>AshkanAbd</Company>
        <PackageVersion>1.0.5</PackageVersion>
        <Title>Api for ReportSharp.DatabaseReporter of ReportSharp package</Title>
        <Description>Api for ReportSharp.DatabaseReporter of ReportSharp package</Description>
